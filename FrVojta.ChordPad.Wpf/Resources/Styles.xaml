<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="NoteKeyWhite" TargetType="Button">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="Margin" Value="3"/>
    </Style>
    <Style x:Key="NoteKeyBlack" TargetType="Button">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="Margin" Value="10, 3,10,3"/>
    </Style>
    <Style x:Key="ChordKey" TargetType="Button">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="Margin" Value="5"/>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ScaleDeg}"
                                   HorizontalAlignment="Center"
                                   Margin="5"
                                   FontSize="12"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>

    </Style>
    <Style x:Key="StrumSign" TargetType="TextBlock">
        <Setter Property="FontSize" Value="40"/>
    </Style>
    
    <Style x:Key="StrumSignMenu" TargetType="MenuItem">
        <Setter Property="FontSize" Value="40"/>
    </Style>
</ResourceDictionary>