<UserControl x:Class="FrVojta.ChordPads.Wpf.Views.ViewNotePads"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FrVojta.ChordPads.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./../Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Column="00" Grid.Row="1" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyWhite}"
                Tag="C"
                Content="C"
                PreviewMouseDown="Note_MouseDown"
                PreviewMouseUp="Note_MouseUp"
                />
        <Button Grid.Column="02" Grid.Row="1" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyWhite}"
                Tag="E"
                Content="D"
                PreviewMouseDown="Note_MouseDown"
                PreviewMouseUp="Note_MouseUp"/>
        <Button Grid.Column="04" Grid.Row="1" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyWhite}"
                Tag="G"
                Content="E"
                PreviewMouseDown="Note_MouseDown"
                PreviewMouseUp="Note_MouseUp"
                />
        <Button Grid.Column="06" Grid.Row="1" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyWhite}"
                Tag="H"
                Content="F"
                PreviewMouseDown="Note_MouseDown"
                PreviewMouseUp="Note_MouseUp"
                />
        <Button Grid.Column="08" Grid.Row="1" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyWhite}"
                Tag="J"
                Content="G"
                PreviewMouseDown="Note_MouseDown"
                PreviewMouseUp="Note_MouseUp"
                />
        <Button Grid.Column="10" Grid.Row="1" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyWhite}"
                Tag="L"
                Content="A"
                PreviewMouseDown="Note_MouseDown"
                PreviewMouseUp="Note_MouseUp"
                />
        <Button Grid.Column="12" Grid.Row="1" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyWhite}"
                Tag="N"
                Content="B"
                PreviewMouseDown="Note_MouseDown"
                PreviewMouseUp="Note_MouseUp"
                />

        <Button Grid.Column="01" Grid.Row="0" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyBlack}"
                />
        <Button Grid.Column="03" Grid.Row="0" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyBlack}"
                />
        <Button Grid.Column="07" Grid.Row="0" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyBlack}"
                />
        <Button Grid.Column="09" Grid.Row="0" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyBlack}"
                />
        <Button Grid.Column="11" Grid.Row="0" Grid.ColumnSpan="2"
                Style="{StaticResource NoteKeyBlack}"
                />

    </Grid>
</UserControl>
